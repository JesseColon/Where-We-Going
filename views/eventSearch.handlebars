<section class="section" id="newEventBG">
    <div class="container">
        <h1 class="title has-text-centered">Search for Local Events</h1>
        <div class="columns is-centered">
            <div class="column is-8">
                <div class="card card-mw">
                    <div class="card-content">
                        <form id="searchForm">
                            <div class="field has-addons">
                                <div class="control is-expanded">
                                    <input class="input" type="text" placeholder="Search events.." id="searchInput">
                                </div>
                                <div class="control">
                                    <button class="button is-info" type="button" id="searchButton">Search</button>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <div class="select is-fullwidth">
                                        <select id="searchCategory">
                                            <option value="">All Categories</option>
                                            <option value="KZFzniwnSyZfZ7v7nJ">Music</option>
                                            <option value="KZFzniwnSyZfZ7v7nE">Sports</option>
                                            <option value="KZFzniwnSyZfZ7v7na">Arts & Theatre</option>
                                            <option value="KZFzniwnSyZfZ7v7nn">Family</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <div class="select is-fullwidth">
                                        <select id="locationType">
                                            <option value="">Select Location Type</option>
                                            <option value="postalCode">Zipcode</option>
                                            <option value="city">City</option>
                                            <option value="countryCode">Country Code</option>
                                            <option value="stateCode">State Code</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="field" id="locationInputField" style="display: none;">
                                <div class="control">
                                    <input class="input" type="text" placeholder="Enter Location" id="locationInput">
                                </div>
                            </div>
                            <div class="field" id="stateCodeInputField" style="display: none;">
                                <div class="control">
                                    <div class="select is-fullwidth">
                                        <select id="stateCodeInput">
                                            <!-- State options will be appended here -->
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="column is-4">
                <div class="card card-mw">
                    <div class="card-content" id="resultsSection">
                        <!-- Results will be appended here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>